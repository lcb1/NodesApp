<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/margin_horizon"
        android:layout_marginTop="@dimen/margin_vertical"
        android:gravity="start" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_button_val"
        android:textSize="@dimen/save_button_val_size"
        app:layout_constraintTop_toBottomOf="@id/input_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/margin_horizon"
        android:layout_marginVertical="@dimen/margin_vertical"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="@integer/recycle_view_wight"
        app:layout_constraintTop_toBottomOf="@id/save_button_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="@dimen/margin_vertical"
        android:layout_marginHorizontal="@dimen/margin_horizon"
        />





</androidx.constraintlayout.widget.ConstraintLayout>